### Conky configuration file

out_to_x no
own_window no
out_to_console yes
double_buffer no
background no
update_interval 10.0

total_run_times 0
short_units yes

if_up_strictness address
use_spacer left
override_utf8_locale no
cpu_avg_samples 1 

## Sensors examples
# Top Process: ${top name 1}
# Root: {fs_used /}/${fs_size /} /home ${fs_free /home} /${fs_size /home}
# Load: ${loadavg 1} ${loadavg 2} ${loadavg 3} 
# Load: $loadavg
# Swap: ${swap}/${swapmax} (${swapperc}%)
# Processes: ${running_processes} / ${processes}
# CPU: $cpu% 
# HDD: $diskio_read :Read $diskio_write :Write
# Temp: Core0: ${exec sensors | awk '/Core 0/ {print $3}'} Core1: ${exec sensors | awk '/Core 1/ {print $3}'}
# Freq: ${freq cpu0}Mhz
# Uptime: $uptime
# Kernel:$kernel on $machine
# Name: $nodename - $sysname
# Battery: ${battery_percent BAT0}%

## Stuff after 'TEXT' will be formatted on screen

TEXT
# JSON for i3bar
[
{"full_text": "${fs_free /},${fs_free /home}",                  "color":"\#ACACAC"},
${if_up enp7s0} 
    {"full_text": "L:${addr enp7s0}",                           "color":"\#ACACAC"},
${endif}
${if_up wlp8s0} 
    {"full_text": "W:${addr wlp8s0}",                           "color":"\#ACACAC"},
${endif}
{"full_text": "R:${diskio_read} W:${diskio_write}",             "color":"\#ACACAC"},
{"full_text": "RAM: ${memperc}%",                               "color":"\#ACACAC"},
{"full_text": "CPU: ${cpu cpu1}%",                              "color":"\#ACACAC"},
{"full_text": "BAT: ${battery_percent BAT1}%",                  "color":"\#ACACAC"},
{"full_text": "VOL: ${exec amixer -c 0 get Master | grep -oP "[0-9]{1,3}%"}", "color":"\#ACACAC"},
{"full_text": "${time %Y-%m-%d}  ${time %H:%M}",                "color":"\#EFEFEF"}
],
